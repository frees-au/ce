  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for Xdebug",
      "type": "php",
      "request": "launch",
      "hostname": "0.0.0.0",
      "port": 9003,
      "pathMappings": {
          "/var/www/html": "${workspaceFolder}"
      },
      "preLaunchTask": "DDEV: Enable Xdebug",
      "postDebugTask": "DDEV: Disable Xdebug"
    },
    {
      "name": "Lando Xdebug",
      "type": "php",
      "request": "launch",
      "hostname": "127.0.0.1",
      "port": 9003,
      "pathMappings": {
        "/app": "${workspaceRoot}"
      }
    },
    {
      "name": "GovCMS Xdebug",
      "type": "php",
      "request": "launch",
      "hostname": "127.0.0.1",
      "port": 9003,
      "pathMappings": {
        "/app": "${workspaceRoot}"
      }
    }
  ]
}
